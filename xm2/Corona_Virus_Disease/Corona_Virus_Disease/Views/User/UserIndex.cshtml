<style>
    .btn {
        padding: 0px 2px 0px 2px;
    }
</style>
<div id="app">
    <div class="row" style="background-color: aliceblue;">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    物品管理表
                    <button class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top" title="添加学生" onclick="redirectToAdd()">
                        &nbsp;&nbsp;<i class="fa fa-plus-square">&nbsp;&nbsp; 查看领用信息</i>
                    </button>
                </header>
                <table class="table table-striped border-top" id="sample_1">
                    <thead>
                        <tr style="text-align:center;">
                            <th class="center hidden-phone">序号</th>
                            <th class="center hidden-phone">图片</th>
                            <th class="center hidden-phone">物品名称</th>
                            <th class="center hidden-phone">库存</th>
                            <th class="center hidden-phone">类型</th>
                            <th class="center hidden-phone">操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model as List<Corona_Virus_Disease.Models.Article>)
                        {
                            <tr class="odd gradeX" style="text-align:center;vertical-align:middle;">
                                <td class=" hidden-phone">@count</td>
                                <td class=" hidden-phone"><img width="100" height="100" src="~/Content/Image/@item.Apic" /></td>
                                <td class=" hidden-phone">@item.Aname</td>
                                <td class=" hidden-phone">@item.Acount</td>
                                <td class="hidden-phone">@item.Atype</td>
                                <td class="hidden-phone">
                                    <button class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top" title="领用" onclick="redirectToUser('@item.AID')">
                                        <i class="fa fa-info-circle"></i>
                                    </button>
                                    
                                </td>
                            </tr>
                            count++;
                        }



                    </tbody>
                </table>
            </section>
        </div>
    </div>
</div>
