
@{
    ViewBag.Title = "XNotice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Content-FrontModel03/jsvue001.js"></script>
<script src="~/Content/Content-FrontModel03/jsvue002.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<div id="app">
    <div class="row" style="background-color: aliceblue;">
        <div class="col-lg-12">
            <section class="panel">
                <div v-for="item in list">
                    <div class="bio-graph-heading">
                        {{item.Ntitle}}
                    </div>
                    <div class="panel-body bio-graph-info">
                        <h1>内容</h1>
                        <div class="row">
                            <div class="bio-row">
                                <p>{{item.NContent}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script>
    var dz = window.location.href;
    var id = dz.split("=")[1];
    console.log(id);
    var app = new Vue({
        el: "#app",
        data: {
            list: []
        },
        created: function () {
            this.NoticeData();
        },
        methods: {
            NoticeData: function () {
                var vm = this;
                axios.get('/Notice/XNoticeJson?id=' + encodeURIComponent(id))
                    .then(function (response) {
                        vm.list = response.data;
                    })
                    .catch(function (error) {
                        console.log(error);
                    })
            }
        }
    })
</script>






