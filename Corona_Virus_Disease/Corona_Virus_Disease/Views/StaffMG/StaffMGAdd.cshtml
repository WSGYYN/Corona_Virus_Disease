
@{
    ViewBag.Title = "StaffMGAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">核算录入</h6>
        <form action="/StaffMG/StaffMGAdd" method="post">

            <div class="form-floating mb-3">
                <select class="form-select" id="floatingSelect" name="BMID"
                        aria-label="Floating label select example">
                    <option selected>选择部门</option>
                    @foreach (var item in Model as List<Corona_Virus_Disease.Models.Bmt>)
                    {
                        <option value="@item.BMID">@item.BMname</option>
                    }
                </select>
                <label for="floatingSelect">姓名</label>
            </div>
            <div class="form-floating mb-3">
                <select class="form-select" id="floatingSelect" name="Type"
                        aria-label="Floating label select example">
                    <option selected>职工类型</option>
                    <option value="管理员">管理员</option>
                    <option value="教师">教师</option>
                    <option value="医生">医生</option>
                </select>
                <label for="floatingSelect">职工类型</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingPassword" name="Name"
                       placeholder="请输入">
                <label for="floatingPassword">姓名</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingPassword" name="ACC"
                       placeholder="请输入">
                <label for="floatingPassword">账号</label>
            </div>
            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">提交</button>
        </form>

    </div>
</div>

