
@{
    ViewBag.Title = "DrLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid position-relative bg-white d-flex p-0">

    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href="index.html" class="">
                            <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>防疫管理系统</h3>
                        </a>
                        <h3>Sign In</h3>
                    </div>
                    <form action="/Login/DrLogin" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" name="DrAcc" placeholder="请输入">
                            <label for="floatingInput">医生账号</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="floatingPassword" name="DrPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>

                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">登录</button>
                    </form>
                    <p class="text-center mb-0">还没有账号？<a href="/Login/Register">注册</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Sign In End -->
</div>

