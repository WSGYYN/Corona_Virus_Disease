
@{
    ViewBag.Title = "ClassAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";

    @model Corona_Virus_Disease.Models.ClassAddListModel
}


<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">添加班级</h6>
        <form action="/Class/ClassAdd" method="post">

            <div class="form-floating mb-3">
                <select class="form-select" id="floatingSelect" name="BMID"
                        aria-label="Floating label select example">
                    <option selected>选择部门</option>
                    @foreach (var item in Model.Bmtes)
                    {
                        <option value="@item.BMID">@item.BMname</option>
                    }
                </select>
                <label for="floatingSelect">部门</label>
            </div>
            <div class="form-floating mb-3">
                <select class="form-select" id="floatingSelect" name="TID"
                        aria-label="Floating label select example">
                    <option selected>选择老师</option>
                    @foreach (var item in Model.teachers)
                    {
                        <option value="@item.TID">@item.TName</option>
                    }
                </select>
                <label for="floatingSelect">老师</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingPassword" name="Classname"
                       placeholder="班级名称">
                <label for="floatingPassword">班级</label>
            </div>
            


            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">提交</button>
        </form>

    </div>
</div>
